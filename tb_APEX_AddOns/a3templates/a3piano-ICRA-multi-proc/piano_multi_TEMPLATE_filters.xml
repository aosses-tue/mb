    $$filters_pedestal$$
    
    <filter id="amp_SNR" xsi:type="apex:amplifier">
        <device>wavdevice</device>
        <channels>1</channels>
        <basegain>0</basegain>
        <invertgain>true</invertgain> <!-- now it is SNR -->
        <gain id="gain">0</gain> <!-- Total gain = basegain + gain -->
    </filter>
    
    <filter id="amp_use_test1" xsi:type="apex:amplifier">
        <device>wavdevice</device>
        <channels>1</channels>
        <basegain>0</basegain>
        <invertgain>false</invertgain>
        <gain id="gain_rove_test1">0</gain> 
    </filter>
    
    <filter id="ampCal" xsi:type="apex:amplifier">
        <device>wavdevice</device>
        <channels>1</channels>
        <gain channel="0" id="gain0">0.0</gain>
    </filter>
    
    <filter id="rampout" xsi:type="apex:fader">
        <device>wavdevice</device>
        <channels>1</channels>
        <length>$$rampout_len$$</length>
        <type>cosine</type>
        <direction>out</direction>
    </filter>
    
    <filter id="rampout_inst_noise" xsi:type="apex:fader">
        <device>wavdevice</device>
        <channels>1</channels>
        <length>$$rampout_len$$</length>
        <type>cosine</type>
        <direction>out</direction>
    </filter>