    <max_value>20</max_value>
    <larger_is_easier>true</larger_is_easier> <!-- have a look at start_value and the variable parameter  -->
    <repeat_first_until_correct>true</repeat_first_until_correct>
    <stepsizes>
        <change_after>reversals</change_after>
        <stepsize begin="0" size="4"/>
        <stepsize begin="2" size="2"/>
    </stepsizes>
</parameters>
