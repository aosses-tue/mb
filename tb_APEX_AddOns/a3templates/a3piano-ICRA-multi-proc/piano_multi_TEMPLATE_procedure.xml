<procedure xsi:type="apex:adaptiveProcedureType" id="procedure$$ProcedureID$$"> <!-- note = $$test_note$$; test piano = $$Piano1label$$; ref. piano = $$Piano2label$$ -->
    
<parameters>
    <presentations>1</presentations>
    <order>sequential</order>
    <choices >3</choices>
    <pause_between_stimuli>100</pause_between_stimuli>
    <time_before_first_trial>1</time_before_first_trial>
    <nUp>1</nUp>
    <nDown>1</nDown>
    <adapt_parameter>gain</adapt_parameter>
    <start_value>8</start_value> <!-- SNR if related amplifier is with 'inversed gain' -->
    <stop_after_type>reversals</stop_after_type>
    <stop_after>6</stop_after>
