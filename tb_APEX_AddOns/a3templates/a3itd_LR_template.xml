<?xml version='1.0' encoding='UTF-8'?>
<apex:apex xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
 xsi:schemaLocation="http://www.kuleuven.be/exporl/Lab/Apex ../../data/apex/apex/schemas/apex-schema.xsd"
 xmlns:apex="http://www.kuleuven.be/exporl/Lab/Apex"
 version="1">
  <!--
    constant stimuli EAS ITD experiment - AFC
-->
  <procedure xsi:type="apex:constantProcedureType">
    <parameters>
      <presentations>3</presentations>
      <skip>0</skip>
      <order>random</order>
      <choices>1</choices>
    </parameters>
    <trials> $$trials$$</trials>
  </procedure>
  <corrector xsi:type="apex:isequal"/> <!-- Not the same as in MATLAB script-->
  
  <screens>
<reinforcement>
  <progressbar>true</progressbar>
  <feedback length="500">false</feedback>
  <showcurrent>false</showcurrent>
</reinforcement>
    
    <screen id="screen">
<gridLayout height="2" width="1">
    <label x="1" y="1" id="uitleg">
        <text>Klinkt het tweede geluid links of rechts van het eerste?</text>
    </label>

      <gridLayout height="1" width="2" x="1" y="2">
        <button x="1" y="1" id="Links">
          <shortcut>LeftArrow</shortcut>
          <text>Links</text>
        </button>
        <button x="2" y="1" id="Rechts">
          <shortcut>RightArrow</shortcut>
          <text>Rechts</text>
        </button>

      </gridLayout>
</gridLayout>
	<buttongroup id="buttongroup1">
      	<button id="Links"/>
        <button id="Rechts"/>
	</buttongroup>
      <default_answer_element>buttongroup1</default_answer_element>
    </screen>
  </screens>
  <datablocks>
    <uri_prefix>stimuli/</uri_prefix>
    
    $$datablocks$$
  </datablocks>
  <devices>
    <master>soundcard</master>
    <device id="soundcard" xsi:type="apex:wavDeviceType">
      <driver>portaudio</driver>
      <card>default</card>
      <channels>2</channels>
      <gain>0</gain>
      <samplerate>44100</samplerate>
      <buffersize>4096</buffersize>
      <padzero>4</padzero>
    </device>
  </devices>
  <filters>
  </filters>
  <stimuli>
    <fixed_parameters>
      <parameter id="itd"/>
    </fixed_parameters>
    
    $$stimuli$$
  </stimuli>
  <connections>
    <connection>
      <from>
        <id>_ALL_</id>
        <channel>0</channel>
      </from>
      <to>
        <id>soundcard</id>
        <channel>0</channel>
      </to>
    </connection>
    <connection>
      <from>
        <id>_ALL_</id>
        <channel>1</channel>
      </from>
      <to>
        <id>soundcard</id>
        <channel>1</channel>
      </to>
    </connection>
  </connections>
  
  <results>
    <xsltscript>cst.xsl</xsltscript>
    <matlabscript>a3itd_results</matlabscript>
  </results>
  <general>
    <saveprocessedresults>true</saveprocessedresults>
  </general>
</apex:apex>
